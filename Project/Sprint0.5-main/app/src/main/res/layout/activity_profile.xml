<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_default"
        android:scaleType="centerCrop"
        android:contentDescription="Pfp"
        android:layout_gravity="center"
        android:background="@drawable/btn_circle"
        android:padding="4dp" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/expense_stats"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="Total expenses logged: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/budget_stats"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="Total budgets logged:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/circle_stats"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="Total savings circles created:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>