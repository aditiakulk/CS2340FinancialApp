<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/savingscircle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SavingsCircle">


    <TextView
        android:id="@+id/text_savingscircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Savings Circle"
        android:textSize="44sp"
        android:textStyle="bold"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toBottomOf="@id/text_savingscircle"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnJoinGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toBottomOf="@id/text_savingscircle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvYourGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Your Groups:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/btnJoinGroup" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvYourGroup"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/group_box" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconSize="40dp"
        app:menu="@menu/bottom_nav_bar_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>