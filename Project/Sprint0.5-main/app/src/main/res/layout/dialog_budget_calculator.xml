<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_bg"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvCalcTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Budget Calculator"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Category typed by user -->
    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCalcTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type a category"
        android:textAllCaps="true"
        android:inputType="textCapCharacters"
        android:ems="10"
        android:layout_marginStart="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCategoryLabel"
        app:layout_constraintStart_toEndOf="@id/tvCategoryLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Total -->
    <TextView
        android:id="@+id/tvTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="8"
        android:hint="$0.00"
        app:layout_constraintTop_toBottomOf="@id/tvTotalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Spent-to-Date -->
    <TextView
        android:id="@+id/tvSpentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spent-to-Date"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etTotal"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etSpent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="8"
        android:hint="$0.00"
        app:layout_constraintTop_toBottomOf="@id/tvSpentLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Remaining -->
    <TextView
        android:id="@+id/tvRemainingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etSpent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etRemaining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="8"
        android:hint="$0.00"
        app:layout_constraintTop_toBottomOf="@id/tvRemainingLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/dividerCalc"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etRemaining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCancelCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/dividerCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnApplyCalc"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/btnApplyCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/dividerCalc"
        app:layout_constraintStart_toEndOf="@id/btnCancelCalc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
